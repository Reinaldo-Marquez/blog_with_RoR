<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <% if logged_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_category_path(category), class:'btn btn-primary ms-3' %></td>
          <td><%= link_to 'Destroy', category, class:'btn btn-danger ms-1', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    <% if logged_in? && current_user.admin? %>
      <%= link_to 'New Category', new_category_path, class:'btn btn-success' %>
    <% end %>