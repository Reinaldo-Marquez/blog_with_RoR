<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class:"form-label" %>
    <%= form.text_field :title, class: 'form-control', placeholder:"Example input placeholder" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class:"form-label"%>
    <%= form.text_area :description, class: 'form-control', placeholder:"Example input placeholder"%>
  </div>

  
  <div class="mb-3">
  <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <% cb.label(class: "checkbox-inline input_checkbox me-3") {cb.check_box(class: "checkbox") + ' ' + cb.text} %>
  <% end %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-primary'%>
    <%= link_to 'Back', articles_path, class:'btn btn-success'%>
  </div>
<% end %>
