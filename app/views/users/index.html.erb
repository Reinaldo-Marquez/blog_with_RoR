<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.email %></td>
        <% if logged_in? and current_user.admin? %>
        <td><%= link_to 'Destroy', user, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you wnat to delete the user and all their articles?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
